                    </a>
                }
                 @if (HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString() == "GestaoBrainstorm")
                {
                    <a href="@Url.Action("Reuniao", "Brainstorm")" title=@Traducoes.Traduz("Nova")>
                        <span><i class="fa fa-plus navbar-toggle" style="color:#9d9d9d;text-shadow: 0 -1px 0 rgba(0,0,0,.25);"></i></span> @*<b>Home</b>*@
