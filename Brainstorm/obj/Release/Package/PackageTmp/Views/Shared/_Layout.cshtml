            </div>
            <div class="navbar-header pull-left">
                <a href="@Url.Action("Index", "Home")" title=@Traducoes.Traduz("Home")>
                    <span><i class="fa fa-home navbar-toggle" style="color:#9d9d9d;text-shadow: 0 -1px 0 rgba(0,0,0,.25);"></i></span> @*<b>Home</b>*@
                </a>
            </div>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Sistrade Software Consulting, SA</p>
        </footer>
